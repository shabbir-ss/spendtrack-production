# PostgreSQL Database Configuration
DATABASE_URL=postgres://username:password@host:port/database

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Secret (generate a random string for production)
SESSION_SECRET=your-session-secret-here

# JWT Secret for authentication (generate a random string for production)
JWT_SECRET=your-jwt-secret-here

# Application URL (update with your deployed URL)
APP_URL=https://your-app.railway.app

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration - Twilio (Optional)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-number

# SMS Configuration - TextLocal India (Alternative)
TEXTLOCAL_API_KEY=your-textlocal-key
TEXTLOCAL_SENDER=SPNDTRK